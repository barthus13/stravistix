{
  "files": [
    "typings/plugin.d.ts"
  ],
  "include": [
    // Core
    "plugin/core/**/*.ts",
    // Old angularjs webapp
    "plugin/options/**/*.ts",
    // specs
    "specs/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ],
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib" : ["es2015", "es2015.iterable", "dom", "webworker"],
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "inlineSources": true,
    "skipLibCheck": true
  },
  "compileOnSave": false
}
